    <Grid Name="mygrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="58*" />
            <ColumnDefinition Width="325*" />
            <ColumnDefinition Width="79*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="27" />
            <RowDefinition Height="auto" MinHeight="40" />
            <RowDefinition Height="auto" MinHeight="39" />
            <RowDefinition Height="auto" MinHeight="71" />
            <RowDefinition Height="auto" MinHeight="71" />
            <RowDefinition Height="auto" MinHeight="71" />
            <RowDefinition Height="auto" MinHeight="71" />
            <RowDefinition Height="auto" MinHeight="49" />
        </Grid.RowDefinitions>

        <TextBlock Name="TitleBlock" Grid.ColumnSpan="3" TextAlignment="Center">Set options for Qlik KPI tester</TextBlock>
        <!--<TextBlock  VerticalAlignment="Center" Grid.Row="3" Grid.RowSpan="3" Margin="5,66,332,20" TextWrapping="Wrap" TextAlignment="Center" Grid.Column="1" Height="144">These options will be used to modify the behaviour of the program. &#x0a; Hover over each element for description</TextBlock>-->

        <TextBox Name="UsernameBox" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Please enter your username"  Margin="10,5,10,5" Grid.Row="1" Grid.Column="1">
            <ToolTipService.ToolTip>
                <ToolTip Grid.Row="1" Grid.Column="0" Content="Use your normal TEC username" />
            </ToolTipService.ToolTip>
        </TextBox>

        <PasswordBox Name="PasswordBox" Controls:TextBoxHelper.ClearTextButton="True" PasswordChar="*" Grid.Row="2" Grid.Column="1" Controls:TextBoxHelper.Watermark="Password" Margin="10,5,10,5">
            <ToolTipService.ToolTip>
                <ToolTip Grid.Row="1" Grid.Column="0" Content="Provide the password associated with your TEC username" />
            </ToolTipService.ToolTip>
        </PasswordBox>

        <Controls:ToggleSwitch Name="OverrideSwitch" Header="Override dataload?" OnLabel="Yes" OffLabel="No" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,5">
            <ToolTipService.ToolTip>
                <ToolTip Grid.Row="1" Grid.Column="0" Content=
"This option will force the program to recalculate the values for each KPI if set to 'Yes' &#10;Use this if
you have changed the SQL queries in the master table or the program was terminated before finishing" />
            </ToolTipService.ToolTip>
        </Controls:ToggleSwitch>

        <Controls:ToggleSwitch Name="HeadlessSwitch" Header="Run in headless mode?" OnLabel="Yes" OffLabel="No" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,5,10,4">
            <ToolTipService.ToolTip>
                <ToolTip Grid.Row="1" Grid.Column="0" Content="Running in headless mode will cause the program to run without opening a browser.&#10;Use if visual feedback of the test is not needed" />
            </ToolTipService.ToolTip>
        </Controls:ToggleSwitch>

        <Controls:ToggleSwitch Name="DevProdSwitch" Header="Test development or production?" OnLabel="Production" OffLabel="Development" Grid.Row="5" Grid.ColumnSpan="2" Grid.Column="1" Margin="10,5">
            <ToolTipService.ToolTip>
                <ToolTip Grid.Row="1" Grid.Column="0" Content="Determines whether the Development URLs and values should be used or the production ones"/>
            </ToolTipService.ToolTip>
        </Controls:ToggleSwitch>

        <Label Content="Apps to filter" FontSize="18" Grid.Row="6" Grid.Column="1" Margin="5,5">
            <ToolTipService.ToolTip>
                <ToolTip Grid.Row="1" Grid.Column="0" Content="By providing comma separated app ids here, the program will skip processing each of the listed apps" />
            </ToolTipService.ToolTip>
        </Label>

        <TextBox Name="FilterBox" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="'132,233,243'"  Margin="10,0,10,5"  Grid.Row="6" Grid.Column="1" VerticalAlignment="Bottom" Height="26">
            <ToolTipService.ToolTip>
                <ToolTip Grid.Row="1" Grid.Column="0" Content="By providing comma separated app ids here, the program will skip processing each of the listed apps" />
            </ToolTipService.ToolTip>
        </TextBox>

        <Button Name="StartButton" Grid.Row="7" Grid.Column="1" Margin="80,10,80,2" Click="Button_Click" Style="{StaticResource AccentedSquareButtonStyle}" >Start
            <ToolTipService.ToolTip>
                <ToolTip Grid.Row="1" Grid.Column="0" Content="Press to initiate test program" />
            </ToolTipService.ToolTip>
        </Button>

        <Controls:MetroProgressBar IsIndeterminate="True" Grid.Row="7" Grid.ColumnSpan="3" VerticalAlignment="Bottom" Name="myProgressBar" Margin="5,0,10,0" Height="6" Grid.Column="0" >
            <ToolTipService.ToolTip>
                <ToolTip Grid.Row="1" Grid.Column="0" Content="This is a progress bar put here solely because it looks nice and lets you know that the program hasn't crashed (probably)" />
            </ToolTipService.ToolTip>
        </Controls:MetroProgressBar>
        <!--<Controls:ProgressRing IsActive="True" HorizontalAlignment="Right"  Name="myProgressRing"/>-->

    </Grid>

</Controls:MetroWindow>
